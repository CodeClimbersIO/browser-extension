{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "lib",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "importsNotUsedAsValues": "error",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
